{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "translate",
  "title": "Translate",
  "description": "Translation via Google Translate/Youdao",
  "icon": "google-translate.png",
  "author": "binss",
  "contributors": [
    "FezVrasta"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "dict",
      "title": "Dict",
      "subtitle": "Translate",
      "description": "Translation via Google Translate/Youdao",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "keyfrom",
      "type": "textfield",
      "required": true,
      "title": "Youdao KeyFrom",
      "default": "",
      "description": "Youdao api KeyFrom"
    },
    {
      "name": "apikey",
      "type": "textfield",
      "required": true,
      "title": "Youdao APIKey",
      "default": "",
      "description": "Youdao api Key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "@vitalets/google-translate-api": "^7.0.0",
    "node-fetch": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
